

    <h1>PRODUCTOS</h1>
    <div class="container">

        <!-- Alta de nuevo producto --> 
        <h2>Alta de Producto</h2>
        <hr>        
        <form>
            <div class="row">
                <div class="col-25"><label>Nombre :</label></div>
                <div class="col-75"><input type="text" name="nombre" id="nombre" required></div>
            </div>
            <div class="row">
                <div class="col-25"><label>Precio : </label></div>
                <div class="col-75"><input type="text" name="precio" id="precio" required></div>
            </div>
            <div class="row">
                <div class="col-25"><label>Foto URL : </label></div>
                <div class="col-75"><input type="text" name="fotoUrl" id="fotoUrl" required></div>
            </div>
            <div class="row">
                <input type="submit" value="Enviar" id="altaProducto">     
            </div>        
        </form>
    
        <!-- listado de productos--> 
        <h2>Listado de Productos</h2>
        <hr>
        <table>
            <tr>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Foto</th>
            </tr>
            {{#if listadoExiste}}
                {{#each listadoProducto}}
                    <tr>
                    <td>{{this.title}}</td>
                    <td>{{this.price}}</td>
                    <td><img src={{this.thumbnail}} width=150 height=80></td>
                    </tr>
                {{/each}}
            {{/if}}
        </table>

    </div>